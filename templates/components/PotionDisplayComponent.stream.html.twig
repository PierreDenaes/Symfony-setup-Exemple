<turbo-frame id="potion-list-frame">
    <div class="potion-list">
        {% for potion in component.potions %}
            <div class="card">
                <div class="card-header">
                    <h3>{{ potion.nom }}</h3>
                </div>
                <div class="card-body">
                    <p><strong>Description:</strong> {{ potion.description }}</p>
                    <p><strong>Niveau Magique Minimum:</strong> {{ potion.minMagicalLevel.name }}</p>
                    <p><strong>Date de création:</strong> {{ potion.createdAt|date('d-m-Y') }}</p>
                    <p><strong>État:</strong> {{ potion.isActive ? 'Active' : 'Inactive' }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</turbo-frame>